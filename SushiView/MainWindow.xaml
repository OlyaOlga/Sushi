<Window x:Class="SushiView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SushiView"
        mc:Ignorable="d"
         Title="Sushi" Height="350" Width="500" ResizeMode="NoResize">
    <Grid>
        <Image Source="sushi.jpg"></Image>
        <Button x:Name="AcceptOrder" Content="Accept Order" HorizontalAlignment="Left" Margin="350,250,0,0" VerticalAlignment="Top" Width="115" Height="43" Command="{Binding OpenInputWindowCommand}" />
        <Label x:Name="label" Content="Total Sum:" HorizontalAlignment="Left" Margin="73,10,0,0" VerticalAlignment="Top" Height="61" Width="231" FontSize="40"/>
        <Label x:Name="SumLabel" Content="{Binding TotalSum}" HorizontalAlignment="Left" Margin="276,10,0,0" VerticalAlignment="Top" Height="61" Width="135" FontSize="40"/>

    </Grid>
</Window>
